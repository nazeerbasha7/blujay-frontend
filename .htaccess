# Blog: blujaytech.com/Blog -> blog.html
RewriteRule ^Blog/?$ blog.html [NC,L]

# Dashboard: blujaytech.com/Dashboard -> dashboard.html
RewriteRule ^Dashboard/?$ dashboard.html [NC,L]

# Login: blujaytech.com/Login -> login.html
RewriteRule ^Login/?$ login.html [NC,L]

# My Learning: blujaytech.com/MyLearning -> my-learning.html
