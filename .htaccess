# ============================================
# BLUJAY TECH - URL REWRITING RULES
# Clean URLs without .html extensions
# ============================================

RewriteEngine On
RewriteBase /

# Force HTTPS (if needed)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]

# ============================================
# CUSTOM URL MAPPINGS (Friendly Names)
# ============================================

# Homepage: blujaytech.com/ or blujaytech.com/Home -> index.html
RewriteRule ^Home/?$ index.html [NC,L]

# About Us: blujaytech.com/Aboutus -> aboutus.html
RewriteRule ^Aboutus/?$ aboutus.html [NC,L]

# Contact: blujaytech.com/Contact -> contactus.html
RewriteRule ^Contact/?$ contactus.html [NC,L]

# Services: blujaytech.com/Services -> services.html
RewriteRule ^Services/?$ services.html [NC,L]

# All Courses: blujaytech.com/Courses -> all-courses.html
